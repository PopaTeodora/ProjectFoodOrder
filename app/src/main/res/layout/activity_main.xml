<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:layout_editor_absoluteX="11dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text=" Pizza                                   $7.00"
            android:textColor="#111010"
            android:textSize="20sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/pizzaButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:onClick="add_to_list"
            android:text="Add"
            android:textColor="#D5362C"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text=" Burger                                 $5.00"
            android:textColor="#111010"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/burgerButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:onClick="add_to_list"
            android:text="Add"
            android:textColor="#D5362C"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text=" Pasta                                   $4.00"
            android:textColor="#111010"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/pastaButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:onClick="add_to_list"
            android:text="Add"
            android:textColor="#D5362C"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text=" Cake                                    $3.00"
            android:textColor="#111010"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/cakeButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:onClick="add_to_list"
            android:text="Add"
            android:textColor="#D5362C"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"

        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text=" Juice                                   $2.00"
            android:textColor="#111010"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/juiceButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:onClick="add_to_list"
            android:text="Add"
            android:textColor="#D5362C"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:onClick="submit"
        android:text="Submit"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />


</androidx.constraintlayout.widget.ConstraintLayout>